.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f0f2f5;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #096dd9;
}

.subtitle {
  font-size: 16px;
  color: #666;
}

.login-status {
  margin-top: 20px;
}

.feature-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 30px;
}

.feature-card {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  border: 1px solid #e8e8e8;
  box-shadow: 0 2px 12px rgba(0,0,0,0.05);
  margin: 10px;
  width: 45%;
}

.feature-title {
  color: #1890ff;
  margin-bottom: 10px;
}

.feature-description {
  color: #666;
  line-height: 1.6;
}